<!DOCTYPE html>
<html lang="en">
<head>
    include layout/header.pug
    <link rel="stylesheet" href="styles/myProfile.css">
    <title>Мой профиль</title>
    <script src="javascript/myProfile.js" defer></script>
</head>
<body>
    include layout/menu.pug
    <main>
        if(message)
            <div class="message">#{message}</div>
        <form action="/myProfile" method="post" class="my_profile_form form">
            <h1>Мой профиль</h1>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input__readonly material-design-input" 
                        | name="surname" id="surname"
                        | value="#{accountData.user_surname}" required readonly/>
                <label for="surname" class="full_name-label material-design-label-for-input">
                    <span class="content-surname">Фамилия</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input__readonly material-design-input" 
                        | name="firstname" id="firstname" 
                        | value="#{accountData.user_name}" required readonly/>
                <label for="firstname" class="full_name-label material-design-label-for-input">
                    <span class="content-firstname">Имя</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input__readonly material-design-input" 
                        | name="patronymic" id="patronymic"
                        | value="#{accountData.user_patronymic}" required readonly/>
                <label for="patronymic" class="full_name-label material-design-label-for-input">
                    <span class="content-patronymic">Отчество</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input__readonly material-design-input" 
                        | value="#{accountData.email}" 
                        | name="email" id="email" 
                        | required readonly/>
                <label for="email" class="email-label material-design-label-for-input">
                    <span class="content-email">Email</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input__readonly material-design-input" 
                        | name="telephone" id="telephone" 
                        | value="#{accountData.telephone}" required readonly/>
                <label for="telephone" class="telephone-label material-design-label-for-input">
                    <span class="content-telephone">Телефон</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="password" 
                        | class="material-design-input__readonly material-design-input" 
                        | value="#{accountData.password}" name="password" id="password" 
                        | required readonly/>
                <label for="password" class="password-label material-design-label-for-input">
                    <span class="content-password">Пароль</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap repeat_password_wrap_readonly">
                <input  type="password" 
                        | class="material-design-input__readonly material-design-input" 
                        | name="repeat_password" 
                        | value="#{accountData.password}" id="repeat_password" required readonly/>
                <label for="repeat_password" class="repeat_password-label material-design-label-for-input">
                    <span class="content-repeat_password">Повторите пароль</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input__readonly material-design-input" 
                        | name="address" 
                        | value="#{accountData.address}" id="address" required readonly/>
                <label for="address" class="address-label material-design-label-for-input">
                    <span class="content-address">Адрес</span>
                </label>
            </div>
            <div class="button_wrap__edit button_wrap">
                <button type="button" class="button_wrap__button">Редактировать</button>
