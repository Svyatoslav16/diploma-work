<!DOCTYPE html>
<html lang="en">
<head>
    include layout/header.pug
    <link rel="stylesheet" href="styles/editWorkerProfile.css">
    <link rel="stylesheet" href="styles/module/customSelect.css">
    <script src="javascript/customSelect.js" defer></script>
    <script src="javascript/editWorkerProfile.js" defer></script>
    <title>Редактирование профиля</title>
</head>
<body>
    include layout/menu.pug
    <main>
        if(message)
            <div class="message">#{message}</div>
        <form action="/editWorkerProfile" method="post" class="profile_form form">
            <h1>Редактирование профиля</h1>
            <input type="hidden" name="worker_id" value="#{accountData.worker_id}">
            <div class="select-box">
                <div class="options-container">
                    each position in positions
                        <div class="option">
                            if(position.id === accountData.worker_position)
                                <input type="radio" class="radio" id="#{position.name}" name="position" value="#{position.id}" required checked/>
                            else
                                <input type="radio" class="radio" id="#{position.name}" name="position" value="#{position.id}" required/>
                            <label for="#{position.name}">#{position.name}</label>
                        </div>
                </div>
                <div class="selected" name="position">#{accountData.position}</div>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input" 
                        | name="surname" id="surname"
                        | value="#{accountData.worker_surname}" required/>
                <label for="surname" class="full_name-label material-design-label-for-input">
                    <span class="content-surname">Фамилия</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input" 
                        | name="firstname" id="firstname" 
                        | value="#{accountData.worker_name}" required/>
                <label for="firstname" class="full_name-label material-design-label-for-input">
                    <span class="content-firstname">Имя</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input" 
                        | name="patronymic" id="patronymic"
                        | value="#{accountData.worker_patronymic}" required/>
                <label for="patronymic" class="full_name-label material-design-label-for-input">
                    <span class="content-patronymic">Отчество</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input" 
                        | value="#{accountData.email}" 
                        | name="email" id="email" 
                        | required/>
                <label for="email" class="email-label material-design-label-for-input">
                    <span class="content-email">Email</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="text" 
                        | class="material-design-input" 
                        | name="telephone" id="telephone" 
                        | value="#{accountData.telephone}" required/>
                <label for="telephone" class="telephone-label material-design-label-for-input">
                    <span class="content-telephone">Телефон</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="material-design-input-wrap">
                <input  type="password" 
                        | class="material-design-input" 
                        | value="#{accountData.password}" name="password" id="password" 
                        | required/>
                <label for="password" class="password-label material-design-label-for-input">
                    <span class="content-password">Пароль</span>
                </label>
                <object type="image/svg+xml" data="images/cross.svg" class="cross-icon"></object>
                <object type="image/svg+xml" data="images/correct_gray.svg" class="correct-icon"></object>
            </div>
            <div class="button_wrap">
                <button type="submit" class="button_wrap__button">Обновить</button>
